@model List<AplicacionNomina.Models.Empleado>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success">@TempData["Mensaje"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<h2>Lista de Empleados Inactivos</h2>
<p>
    @Html.ActionLink("🔙 Volver a Activos", "Index", "Empleado", null, new
    {
        @class = "btn btn-sm",
        style = "background-color:#D6EAF8; color:#154360; border:1px solid #aed6f1;"
    })
</p>

@if (Model != null && Model.Any())
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Código</th>
                <th>Cédula</th>
                <th>Nombres</th>
                <th>Apellidos</th>
                <th>Correo</th>
                <th>Género</th>
                <th>Fecha de Contratación</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var empleado in Model)
            {
                <tr class="table-secondary">
                    <td>@empleado.Codigo</td>
                    <td>@empleado.Cedula</td>
                    <td>@empleado.Nombres</td>
                    <td>@empleado.Apellidos</td>
                    <td>@empleado.Correo</td>
                    <td>@(empleado.Genero == "M" ? "Masculino" : "Femenino")</td>
                    <td>@empleado.FechaContratacion.ToShortDateString()</td>
                    <td>
                        @Html.ActionLink("🔄 Reactivar", "Reactivar", new { id = empleado.Codigo }, new
                        {
                            @class = "btn btn-sm",
                            style = "background-color:#D5F5E3; color:#145A32; border:1px solid #a3d9c5;",
                            onclick = "return confirm('¿Deseas reactivar este empleado?');"
                        })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">No hay empleados inactivos.</div>
}
