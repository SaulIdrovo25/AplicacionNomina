@{
    Layout = "~/Views/Shared/_LayoutMenu.cshtml";
}
@model List<AplicacionNomina.Models.Empleado>

<div class="container py-4">
    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-success">@TempData["Mensaje"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <h2 class="mb-4 text-center">Lista de Empleados Inactivos</h2>
    <div class="mb-3">
        @Html.ActionLink("🔙 Volver a Activos", "Index", "Empleado", null, new { @class = "btn btn-info btn-sm" })
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-bordered table-striped align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Código</th>
                        <th>Cédula</th>
                        <th>Nombres</th>
                        <th>Apellidos</th>
                        <th>Correo</th>
                        <th>Género</th>
                        <th>Fecha de Contratación</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var empleado in Model)
                    {
                        <tr class="table-secondary">
                            <td>@empleado.Codigo</td>
                            <td>@empleado.Cedula</td>
                            <td>@empleado.Nombres</td>
                            <td>@empleado.Apellidos</td>
                            <td>@empleado.Correo</td>
                            <td>@(empleado.Genero == "M" ? "Masculino" : "Femenino")</td>
                            <td>@empleado.FechaContratacion.ToShortDateString()</td>
                            <td>
                                @Html.ActionLink(
                                         "🔄 Reactivar",
                                         "Reactivar",
                                         new { id = empleado.Codigo },
                                         new
                                         {
                                             @class = "btn btn-success btn-sm",
                                             onclick = "return confirm('¿Deseas reactivar este empleado?');"
                                         }
                                     )
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center">No hay empleados inactivos.</div>
    }
</div>