@model AplicacionNomina.Models.Empleado

@{
    Layout = "~/Views/Shared/_LayoutMenu.cshtml";
    ViewBag.Title = "Perfil";
}

<div class="container mt-4">
    <div class="card shadow-sm" style="border: 1px solid rgba(240, 198, 140, 0.6);">
        <div class="card-header" style="background-color: rgba(255, 229, 180, 0.6); color: #5A3E1B;">
            <h4 class="mb-0">👤 Mi Perfil</h4>
        </div>
        <div class="card-body" style="background-color: rgba(255, 250, 240, 0.7);">
            <div class="row mb-3">
                <div class="col-md-6">
                    <strong style="color: #5A3E1B;">Código:</strong>
                    <p class="form-control-plaintext">@Model.Codigo</p>
                </div>
                <div class="col-md-6">
                    <strong style="color: #5A3E1B;">Cédula:</strong>
                    <p class="form-control-plaintext">@Model.Cedula</p>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <strong style="color: #5A3E1B;">Fecha de nacimiento:</strong>
                    <p class="form-control-plaintext">@Model.FechaNacimiento.ToString("dd/MM/yyyy")</p>
                </div>
                <div class="col-md-6">
                    <strong style="color: #5A3E1B;">Fecha de contratación:</strong>
                    <p class="form-control-plaintext">@Model.FechaContratacion.ToString("dd/MM/yyyy")</p>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <strong style="color: #5A3E1B;">Nombres:</strong>
                    <p class="form-control-plaintext">@Model.Nombres</p>
                </div>
                <div class="col-md-6">
                    <strong style="color: #5A3E1B;">Apellidos:</strong>
                    <p class="form-control-plaintext">@Model.Apellidos</p>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <strong style="color: #5A3E1B;">Género:</strong>
                    <p class="form-control-plaintext">@((Model.Genero == "M") ? "Masculino" : "Femenino")</p>
                </div>
                <div class="col-md-6">
                    <strong style="color: #5A3E1B;">Correo electrónico:</strong>
                    <p class="form-control-plaintext">@Model.Correo</p>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <strong style="color: #5A3E1B;">Activo:</strong>
                    <p class="form-control-plaintext">@((Model.Activo) ? "Sí" : "No")</p>
                </div>
            </div>
        </div>
        <div class="card-footer text-end" style="background-color: rgba(255, 229, 180, 0.6);">
            <a href="@Url.Action("Index", "Menu")" class="btn btn-outline-secondary">← Volver al menú</a>
        </div>
    </div>
</div>
