@model AplicacionNomina.Models.Empleado

@{
    Layout = "~/Views/Shared/_LayoutMenu.cshtml";
    ViewBag.Title = "Perfil";
}

<div class="container py-4">
    <div class="card shadow-sm border-warning">
        <div class="card-header bg-warning bg-opacity-25 text-dark">
            <h4 class="mb-0">👤 Mi Perfil</h4>
        </div>
        <div class="card-body bg-light bg-opacity-50">
            <div class="row mb-3">
                <div class="col-12 col-md-6 mb-2 mb-md-0">
                    <strong class="text-warning">Código:</strong>
                    <p class="form-control-plaintext">@Model.Codigo</p>
                </div>
                <div class="col-12 col-md-6">
                    <strong class="text-warning">Cédula:</strong>
                    <p class="form-control-plaintext">@Model.Cedula</p>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-12 col-md-6 mb-2 mb-md-0">
                    <strong class="text-warning">Fecha de nacimiento:</strong>
                    <p class="form-control-plaintext">@Model.FechaNacimiento.ToString("dd/MM/yyyy")</p>
                </div>
                <div class="col-12 col-md-6">
                    <strong class="text-warning">Fecha de contratación:</strong>
                    <p class="form-control-plaintext">@Model.FechaContratacion.ToString("dd/MM/yyyy")</p>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-12 col-md-6 mb-2 mb-md-0">
                    <strong class="text-warning">Nombres:</strong>
                    <p class="form-control-plaintext">@Model.Nombres</p>
                </div>
                <div class="col-12 col-md-6">
                    <strong class="text-warning">Apellidos:</strong>
                    <p class="form-control-plaintext">@Model.Apellidos</p>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-12 col-md-6 mb-2 mb-md-0">
                    <strong class="text-warning">Género:</strong>
                    <p class="form-control-plaintext">@((Model.Genero == "M") ? "Masculino" : "Femenino")</p>
                </div>
                <div class="col-12 col-md-6">
                    <strong class="text-warning">Correo electrónico:</strong>
                    <p class="form-control-plaintext">@Model.Correo</p>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-12 col-md-6">
                    <strong class="text-warning">Activo:</strong>
                    <p class="form-control-plaintext">@((Model.Activo) ? "Sí" : "No")</p>
                </div>
            </div>
        </div>
        <div class="card-footer text-end bg-warning bg-opacity-25">
            <a href="@Url.Action("Index", "Menu")" class="btn btn-outline-secondary">← Volver al menú</a>
        </div>
    </div>
</div>