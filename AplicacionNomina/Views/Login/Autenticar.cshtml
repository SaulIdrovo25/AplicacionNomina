@model AplicacionNomina.Models.LoginViewModel

@{
    ViewBag.Title = "Autenticar";
}

@section Styles {
    <link href="~/Content/Login.css" rel="stylesheet" />
}

<div class="login-container">
    <div class="glass-box">
        @using (Html.BeginForm("Autenticar", "Login", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <h2 class="text-center">Iniciar Sesión</h2>

            <div>
                @Html.LabelFor(m => m.Usuario)
                @Html.TextBoxFor(m => m.Usuario, new { placeholder = "Usuario", required = "required" })
                @Html.ValidationMessageFor(m => m.Usuario)
            </div>

            <div>
                @Html.LabelFor(m => m.Clave)
                @Html.PasswordFor(m => m.Clave, new { placeholder = "Contraseña", required = "required" })
                @Html.ValidationMessageFor(m => m.Clave)
            </div>

            <button type="submit">Ingresar</button>

            @Html.ActionLink("Registrarse", "Registrarse", "Login", null, new { @class = "fw-bold link-dark text-decoration-none hover-underline" })

            @Html.ValidationSummary(true, "", new { @class = "error-message" })

        }
    </div>
</div>



