@model AplicacionNomina.Models.RegistroViewModel
@{
    ViewBag.Title = "Registrarse";
}
@section Styles {
    <link href="~/Content/Login.css" rel="stylesheet" />
}

@using (Html.BeginForm("Registrarse", "Login", FormMethod.Post))
{
    <h2>Registrarse</h2>

    <div class="form-grid">
        <div>
            @Html.LabelFor(m => m.Ci)
            @Html.TextBoxFor(m => m.Ci)
            @Html.ValidationMessageFor(m => m.Ci)
        </div>

        <div>
            @Html.LabelFor(m => m.FirstName)
            @Html.TextBoxFor(m => m.FirstName)
            @Html.ValidationMessageFor(m => m.FirstName)
        </div>

        <div>
            @Html.LabelFor(m => m.LastName)
            @Html.TextBoxFor(m => m.LastName)
            @Html.ValidationMessageFor(m => m.LastName)
        </div>

        <div>
            @Html.LabelFor(m => m.BirthDate)
            @Html.TextBoxFor(m => m.BirthDate, "{0:yyyy-MM-dd}", new { type = "date" })
            @Html.ValidationMessageFor(m => m.BirthDate)
        </div>

        <div>
            @Html.LabelFor(m => m.HireDate)
            @Html.TextBoxFor(m => m.HireDate, "{0:yyyy-MM-dd}", new { type = "date" })
            @Html.ValidationMessageFor(m => m.HireDate)
        </div>

        <div>
            @Html.LabelFor(m => m.Correo)
            @Html.TextBoxFor(m => m.Correo, new { type = "email" })
            @Html.ValidationMessageFor(m => m.Correo)
        </div>

        <div>
            @Html.LabelFor(m => m.Usuario)
            @Html.TextBoxFor(m => m.Usuario)
            @Html.ValidationMessageFor(m => m.Usuario)
        </div>

        <div>
            @Html.LabelFor(m => m.Clave)
            @Html.PasswordFor(m => m.Clave)
            @Html.ValidationMessageFor(m => m.Clave)
        </div>

        <div>
            @Html.LabelFor(m => m.Gender)
            @Html.DropDownListFor(m => m.Gender, new SelectList(new[] {
                new { Value = "M", Text = "Masculino" },
                new { Value = "F", Text = "Femenino" }
            }, "Value", "Text"), "Selecciona una opción")
            @Html.ValidationMessageFor(m => m.Gender)
        </div>

        <div>
            @Html.LabelFor(m => m.Rol)
            @Html.DropDownListFor(m => m.Rol, new SelectList(new[] {
                new { Value = "RRHH", Text = "RRHH" },
                new { Value = "admin", Text = "Administrador" }
            }, "Value", "Text"), "Selecciona un rol")
            @Html.ValidationMessageFor(m => m.Rol)
        </div>
    </div>

    <button type="submit">Registrarse</button>
    @Html.ActionLink("Iniciar Sesión", "Autenticar", "Login")
    if (ViewBag.Error != null)
    {
        <div class="error-message">
            @ViewBag.Error
        </div>
    }

}






