@{
    Layout = "~/Views/Shared/_LayoutMenu.cshtml";
}

@model List<AplicacionNomina.Models.Reportes>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success">@TempData["Mensaje"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<h2>Reporte de Cargos y Usuarios</h2>
@Html.ActionLink("📊 Descargar Excel", "DescargarExcel", "Reportes", null, new
{
    @class = "btn btn-sm",
    style = "background-color:#D6EAF8; color:#154360; border:1px solid #aed6f1;"
})

<p>
    @Html.ActionLink("🔄 Actualizar Reporte", "Index", "Reportes", null, new
    {
        @class = "btn btn-sm",
        style = "background-color:#D5F5E3; color:#145A32; border:1px solid #a3d9c5;"
    })
</p>

@if (Model != null && Model.Any())
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Usuario</th>
                <th>Salario</th>
                <th>Fecha de Ingreso</th>
                <th>Rol</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var reporte in Model)
            {
                <tr class="table-light">
                    <td>@reporte.Usuario</td>
                    <td>@reporte.Salario.ToString("C")</td>
                    <td>@reporte.FechaIngreso.ToShortDateString()</td>
                    <td>@reporte.Rol</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">No se encontraron datos de reportes.</div>
}

